{
  "name": "trainify_api",
  "version": "1.0.0",
  "description": "Backend API for Trainify Tracker Application",
  "main": "src/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:auth": "jest tests/unit/auth.test.js",
    "test:exercises": "jest tests/unit/exercise.test.js",
    "test:report":"jest tests/unit/report.test.js",
    "test:workouts": "jest tests/unit/workout.test.js",
    "test:integration": "jest src/tests/integration/",
    "test:basic":"jest tests/unit/basic.test.js",
    "test:diagnostic":"jest tests/unit/diagnostic.test.js",
    "db:init": "node scripts/init-db.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node src/scripts/seed-db.js",
    "db:reset": "node scripts/reset-db.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.0.0",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
