FROM node:18-alpine

WORKDIR /app

# Instalar herramientas útiles para desarrollo
RUN apk add --no-cache \
    curl \
    bash \
    postgresql-client \
    git \
    && npm install -g nodemon

# Copiar package files primero (para cache de capas)
COPY package*.json ./

# Instalar dependencias
RUN npm ci

# Copiar código fuente
COPY . .

# Crear volumen para node_modules
VOLUME ["/app/node_modules"]

# Exponer puerto
EXPOSE 5000

# Comando de desarrollo
CMD ["npm", "run", "dev"]